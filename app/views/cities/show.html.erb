<style type="text/css">
  @import url(http://fonts.googleapis.com/css?family=Karla:700,400);
h1, h2 {
  color: white;
  font-family: 'Karla-Bold', Helvetica Neue, Helvetica, sans-serif;
  font-weight: 700;
  text-align: center;
}

h1 {
  margin-bottom: 0;
}

h2 {
  font-size: 1em;
  margin-top: 0;
  line-height: 1.6em;
}

p {
  font-family: 'Karla-Regular', Helvetica Neue, Helvetica, sans-serif;
  line-height: 1.4em;
  font-weight: 400;
}

.wrapper {
  margin: 0 auto;
  width: 90%;
}

.logo,
.info-panel__main {
  -moz-transform: translateY(3em);
  -ms-transform: translateY(3em);
  -webkit-transform: translateY(3em);
  transform: translateY(3em);
}

.logo {
  background: url("http://mperrotti.com/img/icons.svg") no-repeat #167f92 18px 20px;
  border-radius: 999em;
  border: .75em solid white;
  height: 6em;
  margin: 0 auto;
  position: relative;
  width: 6em;
  z-index: 2;
}

.info-panel .info-panel__main {
  background: #167f92;
  border-radius: .25em .25em 0 0;
  margin-top: -4em;
  padding: 4em 2em 2em 2em;
  position: relative;
  z-index: 1;
}
.info-panel .info-panel__main .info-panel__social {
  margin: 2em auto 0 auto;
  width: 175px;
}
.info-panel .info-panel__main .info-panel__social a {
  display: inline-block;
  vertical-align: middle;
  *vertical-align: auto;
  *zoom: 1;
  *display: inline;
  height: 24px;
  margin: 0 .5em;
  width: 24px;
}
.info-panel .info-panel__main .info-panel__social a[href*="dribbble"] {
  background: url("http://mperrotti.com/img/icons.svg") no-repeat transparent 0 -73px;
}
.info-panel .info-panel__main .info-panel__social a[href*="github"] {
  background: url("http://mperrotti.com/img/icons.svg") no-repeat transparent 0 -108px;
}
.info-panel .info-panel__main .info-panel__social a[href*="twitter"] {
  background: url("http://mperrotti.com/img/icons.svg") no-repeat transparent 0 -144px;
}
.info-panel .info-panel__main .info-panel__social a[href*="last.fm"] {
  background: url("http://mperrotti.com/img/icons.svg") no-repeat transparent 0 -177px;
}
.info-panel .info-panel__bio {
  -moz-transform: translateY(-100%);
  -ms-transform: translateY(-100%);
  -webkit-transform: translateY(-100%);
  transform: translateY(-100%);
  background: #141926;
  max-height: 0em;
  overflow: hidden;
  position: relative;
  z-index: 0;
}
.info-panel .info-panel__bio p {
  border-top: 1px solid white;
  color: white;
  margin: 0 auto;
  padding: 2em 1em;
  width: 70%;
}

.info-panel__pull-tab {
  background: #68c18f;
  border-radius: 0 0 .25em .25em;
  display: block;
  height: 1em;
  position: relative;
  top: 3em;
  /*  &:after {
        content: '';
        position: absolute;
        border-width: 1em 1em 0;
        border-style: solid;
        border-color: $accent transparent;
        bottom: -1em;
        display: block;
        left: 50%;
        margin-left: -1em;
        width: 0;
      }*/
}

/* ------ Expanded info styles ------ */
.logo,
.info-panel__main,
.info-panel__bio {
  -moz-transition: all 0.25s ease;
  -o-transition: all 0.25s ease;
  -webkit-transition: all 0.25s ease;
  transition: all 0.25s ease;
  -webkit-backface-visibility: hidden;
}

.info-panel__pull-tab {
  -moz-transition: all 1s ease;
  -o-transition: all 1s ease;
  -webkit-transition: all 1s ease;
  transition: all 1s ease;
}

.is-expanded .logo,
.is-expanded .info-panel__main,
.is-expanded .info-panel__bio {
  -moz-transition: all 1s ease;
  -o-transition: all 1s ease;
  -webkit-transition: all 1s ease;
  transition: all 1s ease;
  -webkit-backface-visibility: hidden;
}
.is-expanded .info-panel__pull-tab {
  -moz-transition: all 0.25s ease;
  -o-transition: all 0.25s ease;
  -webkit-transition: all 0.25s ease;
  transition: all 0.25s ease;
}
.is-expanded .logo,
.is-expanded .info-panel__main,
.is-expanded .info-panel__bio {
  -moz-transform: translateY(0);
  -ms-transform: translateY(0);
  -webkit-transform: translateY(0);
  transform: translateY(0);
}
.is-expanded .info-panel__bio {
  max-height: 15em;
}
.is-expanded .info-panel__pull-tab {
  top: 0;
}
.is-expanded .info-panel__pull-tab:after {
  border-width: 0 1em 1em;
  bottom: auto;
  top: -1em;
}

</style>












