

<div class="container">
    <div>
        <div class="well">
        <h1 class="text-center">Listado de Pascientes</h1>
        <p class="text-center">Listado de los pascientes que se encuentran registrados</p>
        
<style type="text/css">
  .avatar-pasciente:hover{
    background-color: transparent !important;
  }
</style>
    <div>
        <div>
            
            <div class="row">
              <div class="col-md-12">
              </div>
            </div>
            <% @patients.each do |patient| %>
            <div class="row">
                
<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
<div>
  <div class="row">
      <div class="col-md-12">
      <div class="panel panel-success">
            <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            <h2 class="text-primary"><b><span class="glyphicon glyphicon-user"></span> <%= patient.first_name %> <%= patient.second_name %> <%= patient.first_surname %> <%= patient.second_surname %></b></h2>
                            <p><strong><span class="glyphicon glyphicon-ok-circle"></span>Email: </strong> <%= patient.email %></p>
                               <p><strong><span class="glyphicon glyphicon-ok-circle"></span>Email: </strong> <%= patient.birthdate%></p>
                            <p><strong><span class="glyphicon glyphicon-certificate"></span>Hobbies: </strong>write rap, listen to rap music</p>
                            <p><strong><span class="glyphicon glyphicon-thumbs-up"></span>Skills: </strong>
                                <span class="label label-info tags">html5</span> 
                                <span class="label label-info tags">css3</span>
                                <span class="label label-info tags">jquery</span>
                                <span class="label label-info tags">bootstrap3</span>
                            </p>
                        </div><!--/col-->          
                        <div class="col-xs-12 col-sm-4 text-center">
                                <img src="http://s.ytimg.com/yts/img/avatar_720-vflYJnzBZ.png" style="width:100px;height:100px; border-radius: 55px;" alt="" class="center-block img-circle img-responsive profile-img">
                               
                        </div><!--/col-->

                                                <div class="col-xs-12 col-sm-4">
                            <h2></h2>                    
                            <p></p>
                            <button type="button" class="btn btn-default btn-block"><span class="fa fa-list-alt"></span> <%= link_to 'Historias Clinicas(' + patient.clinic_histories.count.to_s + ')' , patient_clinic_histories_path(patient) %> </button>  
                        </div><!--/col-->


                        <div class="col-xs-12 col-sm-4">
                            <h2><strong>35</strong></h2>                    

<style type="text/css">
    .crud{
        color:white !important;
    }
</style>

                            <%= link_to patient, class: "btn btn-info btn-block crud" do %>
                                <i class="fa fa-user"> Ver</i>
                            <% end %>

                        </div><!--/col-->


<div class="col-xs-12 col-sm-4">
                            <h2><strong> 10,7K </strong></h2>                    




                            <%= link_to edit_patient_path(patient), class: "btn btn-success btn-block crud" do %>
                                <i class="fa fa-user"> Editar</i>
                            <% end %>

                        </div><!--/col-->

<div class="col-xs-12 col-sm-4">
                            <h2><strong> 10,7K </strong></h2>                    
                            
                            <%= link_to patient, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger btn-block crud" do %>
                                <i class="fa fa-user"> Eliminar</i>
                            <% end %>

                        </div><!--/col-->

                    </div><!--/row-->
              </div><!--/panel-body-->
          </div><!--/panel-->
    </div>
  </div>
</div>                                        

<style type="text/css">
    
.profile-img{box-shadow: 0 5px 15px rgba(0,0,0,.5)}
</style>



            </div><!-- End row -->
            <% end %>
                              <%= link_to 'Nuevo Pasciente', new_patient_path %>

        </div><!-- End container -->
    </div>

